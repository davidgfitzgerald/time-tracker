{
	"name": "time-tracker",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"local": "caffeinate -i vite dev --host --open",
		"app": "vite dev --host",
		"dev": "docker compose up --force-recreate --build",
		"deploy": "./deployment/scripts/ci.sh",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"pull-prod": "./scripts/pull_prod_data.sh",
		"reset-local-db": "psql service=local -f db/wipe.sql; psql service=local -f timetracker-prod.sql",
		"pgcli": "pgcli --host localhost time_tracker --user admin",
		"pgconf": "./scripts/pgconf.sh"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.20.6",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@types/eslint": "^9.6.1",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"luxon": "^3.5.0",
		"pg": "^8.13.1",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"svelte": "^5.11.2",
		"svelte-check": "^4.1.1",
		"typescript": "^5.7.2",
		"vite": "^6.3.4",
		"vitest": "^2.1.8"
	},
	"type": "module"
}
